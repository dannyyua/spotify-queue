{
  "name": "Spotify Queue+",
  "description": "Extends the functionality of the Spotify queue system.",
  "icons": {  "16": "icon16.png",
              "48": "icon48.png",
              "128": "icon128.png" },
  "version": "1.4",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["spq_functions.js", "spq_html_get.js"]
    }
  ],
  "background": {
    "service_worker": "spq_background.js"
  },
  "host_permissions": [
    "https://open.spotify.com/*", "https://*.spotify.com/track-playback/v1/devices"
  ],
  "permissions": [
	  "webRequest"
  ]
}